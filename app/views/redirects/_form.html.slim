= form_for @redirect do |f|
  - if @redirect.errors.any?
    #error_explanation
      h2 = "#{pluralize(@redirect.errors.count, "error")} prohibited this redirect from being saved:"
      ul
        - @redirect.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_area :url
  .field
    = f.label :facebook_pixel_id
    = f.text_field :facebook_pixel_id
  .field
    = f.label :perfect_audience_advertiser_id
    = f.text_field :perfect_audience_advertiser_id
  .field
    = f.label :adroll_advertiser_id
    = f.text_field :adroll_advertiser_id
  .field
    = f.label :adroll_pixel_id
    = f.text_field :adroll_pixel_id
  .field
    = f.label :other_js
    = f.text_area :other_js
  .actions = f.submit
